/* pages/hot/hot.wxss */
.items-count-1 {
    width: 100%;
}

.items-count-2 {
    width: 50%;
}

.items-count-3 {
    width: 33.3%;
}

.items-count-4 {
    width: 25%;
}

.items-count-5 {
    width: 20%;
}

.tab-item {
    box-sizing: border-box;
    float: left;
    height: 36px;
}

.tab-item.selected {
    border-bottom: 2px solid #82b1ff;
    color: #fff;
}

.tab {
    width: 100%;
    position: fixed;
    top: 0;
    height: 36px;
    line-height: 36px;
    background-color: #2b58e0;
    color: #b4c8ff;
    font-size: 15px;
    z-index: 3;
    overflow: hidden;
    text-align: center;
    -webkit-transform: translateZ(0);
}

.match-item {
    display: flex;
    border-bottom: 1px solid #f3f3f7;
}

.match-item .left-icon,.match-item .right-icon {
    position: relative;
    flex: 2;
}

.match-item .match-info {
    position: relative;
    flex: 3;
}

.attend-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 180rpx;
    margin: 14rpx auto;
    border: 0!important;
    border-radius: 30rpx;
    font-size: 24rpx;
    line-height: 60rpx;
}

.attend-btn .clock {
    width: 30rpx;
    height: 24rpx;
    margin-top: -4rpx;
    margin-right: 8rpx;
}

.attend-btn.active {
    color: #fff;
    background-color: #448aff;
}

.attend-btn.cancel {
    color: #000;
    background-color: #f3f3f7;
}

.in-game .match-score {
    color: #FF6257;
}

.in-game .match-time {
    color: #FF6257;
}

.in-game .score-space {
    background-color: #FF6257;
}

.post-game .match-score {
    color: #000;
}

.post-game .score-space {
    background-color: #000;
}

.pre-game .match-score {
    font-size: 16px;
}

.team-name {
    display: block;
    overflow: hidden;
    height: 40px;
    margin-top: 68px;
    text-align: center;
    color: #000;
    font-size: 14px;
    line-height: 40px;
}

.icon-img {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 40px;
    height: 40px;
    margin-top: -20px;
    margin-left: -20px;
}

.match-time,.match-status {
    height: 14px;
    margin-top: 12px;
    text-align: center;
    font-size: 12px;
    line-height: 14px;
}

.match-status {
    margin-top: 10px;
}

.left-score,.right-score {
    position: absolute;
}

.right-score {
    left: 50%;
    margin-left: 15px;
}

.left-score {
    right: 50%;
    margin-right: 15px;
}

.score-space {
    display: inline-block;
    width: 6px;
    height: 2px;
    vertical-align: 7px;
    background-color: #000;
}

.match-score {
    position: relative;
    height: 30px;
    margin-top: 15px;
    text-align: center;
    color: #ADB4BE;
    font-size: 30px;
    line-height: 30px;
}

.navigator-hover {
    background-color: #F7F9FC;
}

.n-match-info {
    width: 100%;
    height: 100%;
}

.n-match-status {
    height: 14px;
    text-align: center;
    font-size: 12px;
    line-height: 14px;
}

.n-match-time {
    height: 14px;
    padding-top: 20px;
    text-align: center;
    font-size: 12px;
    line-height: 14px;
}

.n-match-name {
    position: relative;
    overflow: hidden;
    text-align: center;
    white-space: nowrap;
    text-overflow: ellipsis;
    color: #000000;
    font-size: 16px;
}

.n-img {
    position: absolute;
    top: 7px;
    width: 24px;
    height: 24px;
}

.n-text {
    padding-left: 26px;
}

image>div {
    background-size: 100% 100%;
}

html,body {
    margin: 0;
    background-color: #fff;
}

.date-nav {
    width: 100%;
    height: 50px;
    color: #576b95;
    border-bottom: 1px solid #D6D7DC;
    background-color: #fff;
    font-size: 14px;
    line-height: 50px;
}

.icon-base {
    width: 50px;
    height: 40px;
    text-indent: -10000px;
