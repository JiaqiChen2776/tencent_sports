.pre-day {
    position: absolute;
    z-index: 1;
    top: 0;
    left: 19%;
}

.cur-day {
    text-align: center;
}

.next-day {
    position: absolute;
    top: 0;
    right: 19%;
}

.calendar-icon {
    display: inline-block;
    width: 20px;
    height: 20px;
    margin-left: 12px;
    vertical-align: -5px;
    background: url(data:image/png;base64,) no-repeat;
    background-size: 20px 20px;
}

.gif-preview {
    display: block;
    width: 100%;
}

.play-btn {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 52px;
    height: 52px;
    margin-top: -26px;
    margin-left: -26px;
    background: url(data:image/png;base64,) no-repeat;
    background-size: 52px 52px;
}

.gif-title {
    position: absolute;
    bottom: 0;
    width: 100%;
    padding: 0 12px 12px 12px;
    color: #fff;
    font-size: 16px;
    line-height: 20px;
}

.gif-background {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 72px;
    background-image: linear-gradient(-180deg,rgba(0,0,0,0) 0%,rgba(0,0,0,0.6) 100%);
}

.gif-item {
    position: relative;
    margin-bottom: 4px;
}

.hide {
    display: none;
}

.show {
    display: block;
}

.content {
    min-height: 350px;
}

.more-match {
    position: fixed;
    right: 16px;
    bottom: 16px;
    width: 52px;
    height: 52px;
    -webkit-transform: translateZ(0);
    opacity: 0.8;
    border-radius: 26px;
    background-image: url(data:image/png;base64,);
    background-size: 52px 52px;
    box-shadow: 0 2px 4px 0 rgba(0,0,0,0.3);
}

image>div {
    background-size: 100% 100%;
}

.match-info-list {
    height: 1px;
    margin-top: 51px;
}

.match-list {
    position: relative;
    color: #adb4be;
    background-color: #fff;
    font-size: 14px;
    line-height: 40px;
}

.no-match {
    margin-top: 80px;
    text-align: center;
    color: #adb4be;
    font-size: 16px;
}

.loading {
    text-align: center;
    color: #93989f;
    background-color: #f3f3f7;
    font-size: 26rpx;
    line-height: 50px;
}